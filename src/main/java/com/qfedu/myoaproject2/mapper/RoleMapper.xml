<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qfedu.myoaproject2.mapper.RoleMapper">
  <resultMap id="BaseResultMap" type="com.qfedu.myoaproject2.pojo.Role">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="info" jdbcType="VARCHAR" property="info" />
    <result column="flag" jdbcType="INTEGER" property="flag" />
  </resultMap>
  <sql id="Base_Column_List">
    id, name, info, flag
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from t_role
    where id = #{id,jdbcType=INTEGER}
  </select>


  <select id="selectCount" resultType="java.lang.Integer">
    select count(*) from t_role
  </select>

  <select id="selectByPage" resultType="com.qfedu.myoaproject2.pojo.Role">
    select * from t_role limit #{index},#{limit}
  </select>



  <select id="selectAll" resultType="com.qfedu.myoaproject2.pojo.Role">
    select * from t_role
  </select>


  <select id="selectByUid" resultType="com.qfedu.myoaproject2.pojo.Role">
    select r.*
    from t_role r
    left join t_userrole  ur
    on r.id=ur.rid
    where ur.uid=#{uid}
  </select>


  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from t_role
    where id = #{id,jdbcType=INTEGER}
  </delete>


  <delete id="deleteRoleByUid">
    delete from t_userrole where uid=#{uid}
  </delete>



  <insert id="insert" parameterType="com.qfedu.myoaproject2.pojo.Role">
    insert into t_role ( name, info,
      flag)
    values ( #{name,jdbcType=VARCHAR}, #{info,jdbcType=VARCHAR},
      #{flag,jdbcType=INTEGER})
  </insert>


  <insert id="insertRoleByUid">
    insert into t_userrole values
    <foreach collection="rid" item="role" separator=",">
      (null,#{uid},#{role})
    </foreach>

  </insert>


  <update id="updateByPrimaryKeySelective" parameterType="com.qfedu.myoaproject2.pojo.Role">
    update t_role
    <set>
      <if test="name != null and name !=''">
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="info != null and info !=''">
        info = #{info,jdbcType=VARCHAR},
      </if>
      <if test="flag != null and flag !='' or flag==0">
        flag = #{flag,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>


  <update id="updateByPrimaryKey" parameterType="com.qfedu.myoaproject2.pojo.Role">
    update t_role
    set name = #{name,jdbcType=VARCHAR},
      info = #{info,jdbcType=VARCHAR},
      flag = #{flag,jdbcType=INTEGER}
    where id = #{id,jdbcType=INTEGER}
  </update>

  <update id="updateFlagTo1ById">
    update t_role set flag = 1 where id=#{id}
  </update>


</mapper>